@model WebApp.Areas.Admin.Models.Thuonghieu


<partial name="Create">

    <table class="table">
        <thead>
            <tr>
                <th>
                    Tên thương hiệu
                </th>
                <th>
                   Hình
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Thuonghieu item in ViewBag.ListTH)
            {
                <tr>
                    <td>
                        <h5>@item.TenTH</h5>
                    </td>
                    <td>
                        <img id="imgPre" src="~/img/pro/th/@item.Hinh?@{new Random().Next(1, 1000);}" style="height:100px;width:150px"/>
                             
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Index" asp-route-id="@item.MaThuonghieu">Chỉnh sửa</a>
                        <button class="btn btn-primary" data-ma="@item.MaThuonghieu" data-id="@item.MaThuonghieu" data-name="@item.TenTH" name="btn_update">Chỉnh sửa API</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <script>
          

           
            $('button[name=btn_update]').click(function () {
                var id = $(this).attr('data-id');
                var name = $(this).attr('data-name');
               
                $.ajax({
                    method: "PUT",
                    url: "  ../api/thuonghieu_api/PutThuonghieu/" + id,
                    contentType: 'application/json;charset=UTF-8',
                    data: JSON.stringify({ "MaThuonghieu": parseInt(id), "TenTH": name })
                })
                    .done(function (msg) {
                        alert(msg);
                        location.reload();
                    }).fail(function () { alert("Error") });
            })
            function readURL(input, idImg) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $(idImg).attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            $("#ful").change(function () {
                readURL(this, '#imgPre');
            });

        </script>
    }

   